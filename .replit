run = "php -S 0.0.0.0:8000 -t ."

entrypoint = "index.php"
modules = ["php-8.2", "postgresql-16", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["php", "-S", "0.0.0.0:5000", "-t", "."]
deploymentTarget = "gce"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37791
externalPort = 3000

[[ports]]
localPort = 43257
externalPort = 4200

[agent]
expertMode = true
integrations = ["javascript_object_storage:1.0.0", "sendgrid:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 router.php"
